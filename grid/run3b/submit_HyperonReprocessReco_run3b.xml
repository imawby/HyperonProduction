<?xml version="1.0"?>
<!-- Rerun Pandora over hyperon reco2 files, using a cheated vertex of the secondary interaction  -->
<!DOCTYPE project [
<!ENTITY file_type "montecarlo">
<!ENTITY run_type "physics">
<!ENTITY release "v09_76_00">
<!ENTITY qualifiers "e20:prof">
<!ENTITY name "LambdaVertexCheat">
<!ENTITY path "/pnfs/uboone/persistent/users/imawby/run3b">
<!ENTITY run3bdef "cthorpe_make_hyperon_events_numi_rhc_run3b_hyperon_reco2_reco2">
]>
<project name="&name;">

<!-- Group -->
<group>uboone</group>

<!-- Corresponds to sam definition:
     cthorpe_make_hyperon_events_numi_rhc_run3b_hyperon_reco2_reco2
     = 284742 events -->
<numevents>300000</numevents>

<!-- test number of events: 1 job, 30 files -->
<os>SL7</os>
<resource>DEDICATED,OPPORTUNISTIC</resource>

<larsoft>
  <tag>&release;</tag>
  <qual>&qualifiers;</qual>
  <local>/pnfs/uboone/resilient/users/imawby/larsoftSigma.tar</local>
</larsoft>

<check>0</check>

<stage name="reco">
  <schema>root</schema>
  <jobsub> -l '+SingularityImage="/cvmfs/singularity.opensciencegrid.org/fermilab/fnal-wn-sl7:latest"' --append_condor_requirements='(TARGET.HAS_SINGULARITY=?=true)' </jobsub>
  <inputdef>&run3bdef;</inputdef>
  <fcl>/uboone/app/users/imawby/larsoft_sigma/srcs/ubana/ubana/HyperonProduction/job/ReprocessSlice/run_ReprocessSlice_LambdaVertex_Cheat.fcl</fcl>
  <outdir>&path;/&name;_reco</outdir>
  <workdir>&path;/&name;_work_reco</workdir>
  <jobsub>--memory=6000 --expected-lifetime=12h --disk=2GB</jobsub>
  <numjobs>441</numjobs>
  <maxfilesperjob>11</maxfilesperjob>
</stage>

<!-- file type -->
<filetype>&file_type;</filetype>

<!-- run type -->
<runtype>&run_type;</runtype>

</project>
